extends layout

block content
  h1 Nuevo Plato

  form(action="/dish/new" method="POST")
    .form-group
      label(for="name") Nombre
      input#name.form-control(type="text" name="name" required)

    .form-group
      label(for="description") Descripci√≥n
      textarea#description.form-control(name="description")

    .grid-2
      .form-group
        label(for="price") Precio
        input#price.form-control(type="number" name="price" step="0.01" required)

      .form-group
        label(for="type") Tipo
        select#type.form-control(name="type" required)
          each type in types
            option(value=type.value)= type.name

    .form-group
      label Ingredientes
      .ingredients-list
        each ingredient in ingredients
          label
            input(type="checkbox" name="ingredients" value=ingredient.ingredient_id)
            span= ingredient.name

    .actions
      button.btn.btn-primary(type="submit") Crear
      a.btn.btn-secondary(href="/dish") Cancelar
