extends layout

block content
  h1 Editar Plato

  form(action=`/dish/${dish.dish_id}/update` method="POST")
    .form-group
      label(for="name") Nombre
      input#name.form-control(type="text" name="name" value=dish.name required)

    .form-group
      label(for="description") Descripción
      textarea#description.form-control(name="description")= dish.description

    .grid-2
      .form-group
        label(for="price") Precio (€)
        input#price.form-control(
          type="number" 
          name="price" 
          step="0.01" 
          value=formatPrice(dish.price)
          required
        )

      .form-group
        label(for="type") Tipo
        select#type.form-control(name="type" required)
          each type in types
            option(value=type.value selected=type.value===dish.type)= type.name

    .actions
      button.btn.btn-primary(type="submit") Actualizar
      a.btn.btn-secondary(href=`/dish/${dish.dish_id}`) Cancelar