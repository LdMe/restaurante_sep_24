extends ../layout

block content
  .auth-container
    .auth-card
      h1.auth-title Registro de Usuario

      if message
        .message(class=messageType)= message

      form.auth-form(action="/register" method="POST")
        .form-group
          label(for="name") Nombre *
          input#name.form-control(
            type="text"
            name="name"
            required
            placeholder="Tu nombre"
          )

        .form-group
          label(for="last_name") Apellidos
          input#last_name.form-control(
            type="text"
            name="last_name"
            placeholder="Tus apellidos"
          )

        .form-group
          label(for="email") Email *
          input#email.form-control(
            type="email"
            name="email"
            required
            placeholder="tucorreo@ejemplo.com"
          )

        .form-group
          label(for="tel") Teléfono
          input#tel.form-control(
            type="tel"
            name="tel"
            placeholder="Tu número de teléfono"
          )

        .form-group
          label(for="password") Contraseña *
          input#password.form-control(
            type="password"
            name="password"
            required
            placeholder="Tu contraseña"
          )

        .form-group
          label(for="passwordConfirm") Confirmar Contraseña *
          input#passwordConfirm.form-control(
            type="password"
            name="passwordConfirm"
            required
            placeholder="Repite tu contraseña"
          )

        .form-actions
          button.btn.btn-primary.btn-block(type="submit") Registrarse
          a.btn.btn-link.btn-block(href="/login") ¿Ya tienes cuenta? Inicia sesión

        p.required-fields
          small * Campos obligatorios